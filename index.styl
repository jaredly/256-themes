// widgets

widgets(dark, base, tint, shade, accent-base, accent-tint, accent-dark, accent-text, accent-shade)

  input.form-control
    border-width: 2px
    box-shadow: none
    margin: 15px 0
    box-sizing: border-box
    border-radius: 0
    font-size: 20px
    line-height: 26px
    height: 46px
    
    &:focus
      border-color: dark
  
  ul.dropdown
    margin: 0
    padding: 0
    border: 1px solid dark
    
    li:last-child
      border-bottom: 0
  
  // dropdown
  .select-dropdown
    font-size: 20px
    margin-bottom: 20px
    
    ul
      display: none
      position: absolute
      z-index: 1000
      background-color: white
      width: 400px
      border-top: none
    
    &.opened
      ul
        display: block
      .down-icon
        -webkit-transform: scaleY(-1)
        -moz-transform: scaleY(-1)
        transform: scaleY(-1)
        position: relative
        top: -2px
    
    .selected-item
      border: 1px solid dark
      
      .down-icon
        float: right
        margin: 4px
        //color: dark
    
    .item
      list-style: none
      text-align: left
      border-bottom: 1px solid dark
      padding: 5px 10px
      cursor: pointer
      
      &.selected
        background-color: base
      
      &:hover
        background-color: tint
      
      .date
        margin-left: 50px
        font-size: 80%
        font-style: italic
        color: #777
  
  .btn.login
    padding: 8px 60px
    font-size: 20px
    border-radius: 10px
    margin-top: 5px
  
  
  .large-button
    padding: 8px 60px
    font-size: 20px
    border-radius: 10px
    margin-top: 5px
  
  .btn-group
    .btn-default
      background-color: white
      &.active,
      &:active
        background-color: tint
        box-shadow: none
      &:hover
        background-color: tint
  
  .btn-default
    background-color: tint
    border-color: dark
    border-width: 1px
    padding: 3px 25px
  
    &:hover
      background-color: base
    &:active
      background-color: shade
      box-shadow: none
  
  .accent-btn
    color: accent-text
    font-weight: bold
    border-color: accent-dark
    background-color: accent-base
    &:hover
      background-color: accent-tint
    &:active
      background-color: accent-shade

.second-theme
  widgets(#A68800, #FFD200, #FFDD40, #E2BC0C, #0082FF, #55ABFF, #04396C, white, #0070DC)
  .btn
    border-radius: 0
  .btn-default
    padding: 2px 10px
    
  .select-dropdown
    .selected-item
      border-radius: 20px
    &.opened
      .selected-item
        border-radius: 0
        border-top-left-radius: 20px
        border-top-right-radius: 20px
      ul
        border-bottom-left-radius: 20px
        border-bottom-right-radius: 20px
        
        .item:last-child
          border-bottom-left-radius: 20px
          border-bottom-right-radius: 20px
        
  
  input.search-box
    border-radius: 20px
  
.default-theme
  widgets(#4DCD17, #9AFF6F, #C2FFA8, #68FF27, #FF6F88, #FFA8B7, #CD1737, white, #FF274E)
  .down-icon
    color: #4DCD17
  .accent-btn
    font-weight: normal
